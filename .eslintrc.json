{
    "root": true,
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
        //        "airbnb"
    ],
    "plugins": [
        //        "react"
    ],
    "env": {
        "es6": true,
        "browser": true,
        "amd": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "arrow-parens": 0,
        "no-unused-expressions": [
            2,
            {
                "allowShortCircuit": true,
                "allowTernary": true
            }
        ],
        "arrow-body-style": 0,
        "comma-dangle": 0,
        "linebreak-style": 0,
        "no-console": 0,
        "no-use-before-define": 0,
        "no-return-assign": 0,
        "global-require": 0,
        "no-underscore-dangle": 0,
        "new-cap": 0,
        "space-before-function-paren": [
            2,
            "never"
        ],
        "func-names": 0,
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1,
                "VariableDeclarator": 1
            }
        ],
        "object-curly-spacing": 0,
        "one-var": 0,
        "prefer-template": 0,
        "padded-blocks": 0,
        "quote-props": [
            "error",
            "as-needed",
            {
                "keywords": true,
                "unnecessary": false,
                "numbers": true
            }
        ],
        "import/prefer-default-export": 0,
        "react/display-name": 0,
        "react/sort-comp": [
            1,
            {
                "order": [
                    "static-methods",
                    "lifecycle",
                    "everything-else",
                    "render"
                ]
            }
        ],
        "react/jsx-indent": [
            2,
            4
        ],
        "react/jsx-indent-props": [
            2,
            4
        ],
        "react/jsx-space-before-closing": 0,
        "react/jsx-filename-extension": 0,
        "react/jsx-tag-spacing": 0
    },
    "globals": {
        "__DEV__": false,
        "__CTX__": false
    }
}
